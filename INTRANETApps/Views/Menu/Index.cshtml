    #Menu {
        position: absolute;
        top: 5%;
        right: 12%;
        width: 36%;
        text-align: center;
    }

    h3 {
        line-height: 50%;
    }
</style>

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script>
    $(document).ready(function () {
        var menuListArray = @Html.Raw(Json.Encode(@ViewBag.menuList));


        for (i = 0; i < menuListArray.length; i++) {

            var stringMenu = "";
            var str = menuListArray[i].contenido;
            var split1 = str.split("*");

            for (var x = 0; x < split1.length; x++) {

                split1[x] = split1[x] + "</br> </br> </br></br>"; //para agregar espacio al ultimo elemento de cada categoria (tendra 2)

                var split2 = split1[x].split(".");

                for (var y = 0; y < split2.length; y++) {
                    split2[0] = "<h2>" + "<b>" + split2[0].toUpperCase() + "</b>" + "</h2>";

                    stringMenu +=  "<h3>" + split2[y]  + "</h3>" ;//para agregar espacio al ultimo elemento y titulo (tendra 1)
                }
            }

            document.getElementById("Menu").innerHTML = stringMenu;
        }

    });


</script>